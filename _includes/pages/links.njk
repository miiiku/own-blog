---
layout: layouts/base.njk
templateClass: tmpl-links
---

<div class="links-section">
  {% if content %}
  <div class="links-content">
    {{ content | safe }}
  </div>
  {% endif%}
  
  <ul class="links-list">
    {% for link in links %}
    <li class="links-item">
      <div class="links-title"><a href="{{ link.link | url }}" target="_blank" rel="noopener">{{ link.name }}</a></div>
      {% if link.description %}
        <div class="links-description">{{ link.description }}</div>
      {% endif %}
    </li>
    {% endfor%}
  </ul>
</div>