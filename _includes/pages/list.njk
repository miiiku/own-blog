---
layout: layouts/base.njk
templateClass: tmpl-list
---

<div class="posts-section">
  {% if content %}
  <div class="links-content">
    {{ content | safe }}
  </div>
  {% endif%}

  <table class="posts-table">
    {%- for post in collections[tag] %}
    <tr class="post-item">
      <td class="post-time">
        <time datetime="{{ post.date | htmlDate }}">{{ post.date | textDate }}</time>
      </td>
      <td class="post-title">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </td>
    </tr>
    {% endfor %}
  </table>
</div>