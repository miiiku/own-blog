---
layout: layouts/base.njk
templateClass: tmpl-list
permalink: /tags/{{ tag | slugify }}/
eleventyComputed:
  title: “{{ tag }}”
pagination:
  data: collections
  size: 1
  alias: tag
  filter: ['posts']
---

<div class="posts-section">
  <table class="posts-table">
    {%- for post in collections[tag] %}
    <tr class="post-item">
      <td class="post-time">
        <time datetime="{{ post.date | htmlDate }}">{{ post.date | textDate }}</time>
      </td>
      <td class="post-title">
        <a href="{{ post.url }}">
          <h2>{{ post.data.title }}</h2>
        </a>
      </td>
    </tr>
    {% endfor %}
  </table>
</div>